{
  "name": "@samouraiwallet/one-dollar-fee-estimator",
  "version": "0.1.0",
  "engines": {
    "node": ">=16"
  },
  "description": "A script estimating the minimum feerate required for the inclusion of a bitcoin transaction into the next block.",
  "keywords": [
    "bitcoin",
    "fees",
    "calculator"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "one-dollar-fee-estimator": "./dist/bin.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .ts src/ test/",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.build.json",
    "build": "npm run build:clean && npm run build:esm && chmod +x ./dist/bin.js",
    "prepack": "npm run lint && npm run typescript && npm run test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://code.samourai.io/dojo/one-dollar-fee-estimator-js.git"
  },
  "bugs": {
    "url": "https://code.samourai.io/dojo/one-dollar-fee-estimator-js/-/issues"
  },
  "author": "Katana Cryptographic Ltd.",
  "license": "LGPL-3.0",
  "homepage": "https://code.samourai.io/dojo/one-dollar-fee-estimator-js",
  "devDependencies": {
    "@types/json-bigint": "^1.0.1",
    "@types/node": "^16.18.30",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.40.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unicorn": "^47.0.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "dependencies": {
    "json-bigint": "1.0.0",
    "yargs": "17.7.2"
  }
}
